generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  name     String
  email    String @unique
  password String

  products Product[]

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())

  name        String
  description String
  price       Float

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  User    User? @relation(fields: [user_id], references: [id])
  user_id Int?

  @@map("products")
}
